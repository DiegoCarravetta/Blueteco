generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(uuid())
  name                 String
  birthDate            String
  office               String
  email                String   @unique
  password             String
  passwordConfirmation String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("user")
}
